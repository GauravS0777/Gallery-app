<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery app</title>
    
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
    crossorigin="anonymous">
    
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <div class="container my-2">
        <h1 class="heading">Gallery app</h1>
        <div class="row">
            <div class="col-md-3 my-3">
                <h2 class="form-title">Upload photo</h2>
                <form class="my-2" action="/" method="POST" enctype="multipart/form-data">
                    <input type="text" name="title" required="true" class="form-control my-2" placeholder="name...">
                    <textarea name="description" class="form-control my-2" rows="3" placeholder="description..."></textarea>
                    <input type="file" name="image" required="true" class="form-control my-2">
                    <button type="submit" class="btn btn-primary upload-btn">Upload</button>
                </form>
            </div>
            <div class="col-md-9 my-2">
                <div class="row">
                    <% images.forEach((image) => { %>
                        <div class="col-md-4 my-2">
                            <div class="card" >
                                <img src="data:<%= image.contentType %>;base64,<%= image.img %>" class="card-img-top photo" alt="...">
                                <div class="card-body">
                                  <h5 class="card-title"><%= image.title %></h5>
                                  <a href="/photo/<%= image._id %>" class="btn btn-outline-dark link">View</a>
                                  <a href="/delete/<%= image._id %>" class="btn btn-outline-danger link">Delete</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
